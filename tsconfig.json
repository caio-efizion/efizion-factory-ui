{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "pages/**/*",
    "types/**/*",
    "public/**/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
